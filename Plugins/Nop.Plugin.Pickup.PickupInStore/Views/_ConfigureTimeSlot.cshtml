@using Nop.Plugin.Pickup.PickupInStore.Models
@using Nop.Web.Framework.Models.DataTables
@model StorePickupTimeSlotSearchModel
@{
    Layout = "_ConfigurePlugin";
}
<form asp-controller="PickupInStore" asp-action="ConfigureTimeSlot" method="post" id="pickup-timeslot-form">
   @* <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Pickup.PickupInStore.ConfigureTimeSlot")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Pickup.PickupInStore.BackToList")</a>
            </small>
        </h1>
    </div>*@
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                @await Html.PartialAsync("Table", new DataTablesModel
                {
                Name = "pickup-timeslot-grid",
                UrlRead = new DataUrl("PickUpTimeSlotList", "PickupInStore",new RouteValueDictionary { ["StorePickupPointId"] = Model.StorePickupPointId}),
                UrlUpdate = new DataUrl("UpdateTimeSlot", "PickupInStore", null),
                UrlDelete = new DataUrl("DeleteTimeSlot", "PickupInStore", null),
                Length = Model.PageSize,
                LengthMenu = Model.AvailablePageSizes,
                ColumnCollection = new List<ColumnProperty>
                {
                new ColumnProperty(nameof(StorePickupTimeSlotModel.TimeSlot))
                {
                Title = T("Plugins.Pickup.PickupInStore.Fields.TimeSlot").Text,
                ClassName = NopColumnClassDefaults.CenterAll,
                Width = "200"
                },
                new ColumnProperty(nameof(StorePickupTimeSlotModel.LimitOrderPerTimeSlot))
                {
                Title = T("Plugins.Pickup.PickupInStore.Fields.LimitOrderPerTimeSlot").Text,
                ClassName = NopColumnClassDefaults.CenterAll,
                Width = "200",
                Editable = true,
                EditType = EditType.Number
                },
                new ColumnProperty(nameof(StorePickupTimeSlotModel.Active))
                {
                Title = T("Plugins.Pickup.PickupInStore.Fields.Active").Text,
                ClassName = NopColumnClassDefaults.CenterAll,
                Width = "100",
                Render = new RenderBoolean(),
                Editable = true,
                EditType = EditType.Checkbox
                }
                ,
                new ColumnProperty(nameof(StorePickupTimeSlotModel.Id))
                {
                Title = T("Admin.Common.Edit").Text,
                Width = "150",
                ClassName =  NopColumnClassDefaults.Button,
                Render = new RenderButtonsInlineEdit()
                },

                new ColumnProperty(nameof(StorePickupTimeSlotModel.Id))
                {
                Title = T("Admin.Common.Delete").Text,
                ClassName = NopColumnClassDefaults.Button,
                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                Width = "100"
                }
                }
                })

            </div>

            <script>
                function renderColumnEdit(data, type, row, meta) {
                    return '<button onclick=\"javascript:OpenWindow(\'@Url.Content("~/Admin/PickupInStore/EditTimeSlot/")' + data + '?btnId=btnRefresh&formId=pickup-timeslot-form\', 800, 800, true); return false;\" class="btn btn-default"><i class="fas fa-pencil-alt"></i>@T("Admin.Common.Edit").Text</button>';
                }
            </script>

            <div class="card-footer">
                <button type="submit" id="btnAddNewOption" name="save" class="btn btn-primary" onclick="javascript:OpenWindow('@(Url.Action("CreateTimeSlot", "PickupInStore",  new { StorePickupPointId = Model.StorePickupPointId,btnId = "btnRefresh", formId = "pickup-timeslot-form"}))', 800, 800, true); return false;">@T("Plugins.Pickup.PickupInStore.AddNewTimeSlot")</button>

                <button id="btnRefresh" type="submit" name="save" class="btn btn-default" style="display: none"></button>
            </div>
            <script>
                $(document).ready(function () {
                    debugger;
                    $('#btnRefresh').click(function () {
                        //refresh grid
                        updateTable('#pickup-timeslot-grid');

                        //return false to don't reload a page
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</form>